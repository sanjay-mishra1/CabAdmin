<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="3dp"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="80dp"
        android:background="@drawable/new_driver"
        android:id="@+id/driver_image"
        android:layout_margin="5dp"

         android:layout_centerVertical="true"
        android:layout_height="80dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
         android:id="@+id/r1"
        android:layout_toEndOf="@id/driver_image"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
             android:textSize="20sp"
            android:id="@+id/driver_name"
            android:textColor="@android:color/holo_green_light"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="date"
             android:id="@+id/driver_mobile"
            android:textColor="#000"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_phone_android_black_24dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/l1"
        android:layout_below="@id/r1"
        android:layout_toEndOf="@id/driver_image"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/from_destination"
             android:text="Malwa institute"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="40dp"
            android:layout_gravity="center"
             android:id="@+id/arrow"
            android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
            android:layout_height="40dp" />
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/to_destination"
             android:text="Malwa institute"
             android:layout_height="wrap_content" />

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_below="@id/l1"
        android:id="@+id/r2"
        android:layout_toEndOf="@id/driver_image"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="@string/rupeesSymbol"
            android:textSize="18sp"
            android:id="@+id/trip_cost"
            android:textColor="@android:color/holo_green_light"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="date"
             android:id="@+id/trip_date"
            android:textColor="#000"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/ic_access_time_black_24dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
             android:layout_height="wrap_content" />
    </RelativeLayout>
<View
    android:layout_width="match_parent"
    android:background="@color/io_grays2"
    android:layout_below="@id/r2"
    android:layout_height="1dp"/>
</RelativeLayout>